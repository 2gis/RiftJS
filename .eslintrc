{
	rules: {
		// Possible Errors
		'no-cond-assign': 0,
		'no-console': 0,
		'no-constant-condition': 0,

		// Best Practices
		'consistent-return': 0,
		'eqeqeq': 0,
		'no-extend-native': 0,
		'no-loop-func': 0,
		'no-native-reassign': 0,
		'no-new': 0,
		'no-redeclare': 0,
		'no-return-assign': 0,

		// Strict Mode
		'strict': 0,

		// Variables
		'no-shadow-restricted-names': 0,
		'no-shadow': 0,
		'no-unused-vars': [2, { vars: 'all', args: 'none' }],
		'no-use-before-define': 0,

		// Stylistic Issues
		'new-cap': 0,
		'no-underscore-dangle': 0,
		'quotes': [2, 'single', 'avoid-escape'],
		'semi-spacing': 0
	},
	globals: {
		//
	},
	env: {
		node: true,
		browser: true
	}
}
